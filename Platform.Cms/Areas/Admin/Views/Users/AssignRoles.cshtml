@model EvilDuck.Platform.Cms.Areas.Admin.Models.Users.AssignRolesViewModel

@{
    ViewBag.Title = "Przypisz rolę użytkownikowi";
}

<div>
    <div class="col-md-4 col-md-offset-4">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(e => e.UserId)
                    <div class="form-group">
                        @Html.LabelFor(e => e.SelectedRoles)
                        @Html.ListBoxFor(e => e.SelectedRoles, new MultiSelectList(Model.AllRoles), new { @class = "form-control"})
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Zapisz</button> |
                    @Html.ActionLink("Powrót", "Index")
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div>
</div>
