@model EvilDuck.Platform.Cms.Areas.Admin.Models.Users.AddUserViewModel
@{
    ViewBag.Title = "Dodaj użytkownika";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="col-md-4 col-md-offset-4">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Dodaj użytkownika</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(e => e.Email)
                        @Html.EditorFor(e => e.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(e => e.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Password)
                        @Html.EditorFor(e => e.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(e => e.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.ConfirmPassword)
                        @Html.EditorFor(e => e.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(e => e.ConfirmPassword)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div>
</div>

