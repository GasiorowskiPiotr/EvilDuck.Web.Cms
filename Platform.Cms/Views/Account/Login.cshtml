@model EvilDuck.Platform.Cms.Models.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Zaloguj";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin CMS</title>
    @Styles.Render("~/css/admin")

</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Home")">
                Panel <b>CMS</b>
            </a>
        </div>
        <div class="login-box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(e => e.Email)
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(e => e.Password, new { @class = "form-control", placeholder = "Hasło" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(e => e.Password)
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Zapamiętaj mnie
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Zaloguj</button>
                    </div><!-- /.col -->
                </div>
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/admin")
</body>

</html>